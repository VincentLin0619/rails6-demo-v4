<!DOCTYPE html>
<html>
  <head>
    <title>AppDemo6</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if current_user %>
      <%= render "share/user_navbar" %>
    <% else %>
      <%= render "share/navbar" %>
    <% end %>
    <div class="container mx-auto">
      <% if notice %>
        <p class="flex items-center bg-blue-500 text-white text-sm font-bold px-4 py-3 m-3">
          <%= notice  %>
        </p>
      <% elsif alert %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative m-3" role="alert">
          <strong class="font-bold"><%= alert %></strong>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
