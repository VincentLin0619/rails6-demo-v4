<%= form_with(model: @user, url: dashboard_admin_user_path, method: "patch") do |f| %>

    <div class="row justify-content-center">
      <div class="col-8 mb-3">
        <%= f.label "使用者暱稱", class: "form-label" %>
        <%= f.text_field :nick_name, class: "form-control", autofocus: true %>
      </div>
      <div class="col-8 mb-3">
        <%= f.label "使用者信箱", class: "form-label" %>
        <%= f.email_field :email, class: "form-control", autofocus: true %>
      </div>
      <div class="col-8 mb-3">
        <%= f.label "使用者角色", class: "form-label" %>
        <%= f.select :role, options_for_select([["角色", "user"], "user", "admin"]), {}, class: "form-select" %>
      </div>
      <div class="col-8">
        <%= f.submit "修改", class: "btn btn-danger", data: { confirm: "確認修改" } %>
      </div>
    </div>

<% end %>
